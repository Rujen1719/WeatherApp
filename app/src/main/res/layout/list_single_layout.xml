<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/list_single_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="14sp"
        android:textColor="#000" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/list_single_layout_author_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Author Source"
        android:textSize="14sp"
        android:textColor="#000" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/list_single_layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"
        android:textColor="#000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/list_single_layout_image"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/list_single_layout_posted_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posted On"
        android:textSize="14sp"
        android:textColor="#000" />

</LinearLayout>